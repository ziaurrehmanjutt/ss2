                    $_postUrl  = $_post->getPostUrl();
                    $_postName = $block->escapeHtml($_post->getTitle(), null, true);
                    ?>
                    <div class="item">
                        <div class="date-month g2-font">
                            <?php
                                $date_post = $_post->getPublishDate('Y-m-d');
                                $day       = date('d', strtotime($date_post));
                                $month     = date('M', strtotime($date_post));
                            ?>
                            <div class="day "> <?php echo $day; ?></div>
                            <div class="month"> <?php echo $month; ?></div>
                                   
                        </div>
                        <div class="info-post">
                            

                            <div class="post-title">
                                <a class="post-item-link"
                                   href="<?php echo $_postUrl ?>">
                                    <?php echo $_postName; ?>
                                </a>
                            </div>
                            <div class="post-date">
                                <span class="label"><?php echo __('Posted:') ?></span>
                                <span class="value"><?php echo $_post->getPublishDate('F d, Y') ?></span>
                            </div>
                            <div class="post-short-description">
                                <?php echo $block->getShorContent($_post) ?>
                            </div>

                            <div class="post-read-mores ">
                                <a class="text-theme-color" href="<?php echo $_postUrl ?>"
                                   title="<?php echo $_postName ?>"><?php echo __('Read more') ?></a>
                            </div>
                        </div>
                    </div>
                <?php } ?>
            </div>

